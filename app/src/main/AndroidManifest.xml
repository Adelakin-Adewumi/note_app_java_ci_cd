<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.noteapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/note_download"
        android:label="NoteX"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoteApp">

        <activity
            android:name="com.example.com.fola.noteapp.splashscreen"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecyclerViewFragment"
            android:exported="false" />
        <activity
            android:name="com.example.com.fola.noteapp.WritingActivity"
            android:exported="false" />
        <activity
            android:name="com.example.com.fola.noteapp.MainActivity"
            android:exported="true"
            android:parentActivityName=".SavingActivity">

        </activity>
    </application>

</manifest>